datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model LoginCredentials {
  id           Int      @id @default(autoincrement())
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model ChatSession {
  id        Int       @id @default(autoincrement())
  title     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messages  Message[]
}

model Message {
  id            Int         @id @default(autoincrement())
  chatSession   ChatSession @relation(fields: [chatSessionId], references: [id])
  chatSessionId Int
  senderRole    String
  content       String
  tokensUsed    Int?
  createdAt     DateTime    @default(now())
}

model APIUsageLog {
  id             Int          @id @default(autoincrement())
  chatSessionId  Int?
  endpoint       String
  requestPayload String
  responsePayload String
  requestTokens  Int?
  responseTokens Int?
  totalTokens    Int?
  cost           Float?
  createdAt      DateTime     @default(now())
}
